keywords = {HYSPLIT,hysplit},
mendeley-tags = {HYSPLIT,hysplit},
number = {6},
pages = {4251--4276},
title = {{Characteristics of intercontinental transport of tropospheric ozone from Africa to Asia}},
url = {https://www.atmos-chem-phys.net/18/4251/2018/},
volume = {18},
year = {2018}
}
