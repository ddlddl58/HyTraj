issn = {2169897X},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {Amundsen Sea Low,planetary‐scale waves,stratosphere‐troposphere coupling},
month = {apr},
number = {8},
pages = {3776--3789},
publisher = {Wiley-Blackwell},
title = {{Troposphere-stratosphere dynamical coupling in the southern high latitudes and its linkage to the Amundsen Sea}},
url = {http://doi.wiley.com/10.1002/2015JD024254},
volume = {121},
year = {2016}
