doi = {10.1007/s00382-014-2213-6},
file = {:home/pankaj/Documents/Mendeley/Thomas, Bracegirdle - 2015 - Precipitation pathways for five new ice core sites in Ellsworth Land, West Antarctica.pdf:pdf},
