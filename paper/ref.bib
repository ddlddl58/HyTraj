booktitle = {JOURNAL OF GEOPHYSICAL RESEARCH},
doi = {10.1029/1999JD900772},
file = {:home/pankaj/Documents/Mendeley/Laurila - 1999 - Observational study of transport and photochemical formation of ozone over northern Europe.pdf:pdf},
